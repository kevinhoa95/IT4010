{
	"name": "E2EE",
	"description": "Safe Email",
	"version": "2.0",
	"permissions": [
		"activeTab",
		"http://*/*",
		"https://*/*",
		"storage",
		"contextMenus"
	],
	"browser_action": {
		"default_title": "E2EE",
		"default_popup": "popup.html"
	},
	"applications":{
		"gecko": {
			"id": "123@gmail.com",
			"strict_min_version": "45.0.0"
		}
	},
	"manifest_version": 2,
	"content_scripts": [
		{
			"matches": ["http://*/*", "https://*/*"],
			"js": ["content-scripts.js"],
			"css": ["content-css.css"]
		}
	],
	"background": {
		"scripts": ["background.js"]
	}
}